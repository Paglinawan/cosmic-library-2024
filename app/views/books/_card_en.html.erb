<div class="card-head">
  <% if el.is_classic || el.is_favorite || el.book_tags.any? %>
    <ul class="card-tags">
      <% if el.is_classic %>
        <li class="card-tag is-classic">Classic</li>
      <% end %>
      <% if el.is_favorite %>
        <li class="card-tag is-favorite">Recommend</li>
      <% end %>
      <% el.book_tags.each do |tag| %>
        <li class="card-tag is-default"><%= tag.label_en %></li>
      <% end %>
    </ul>
  <% end %>
  <h3 class="card-title"><%= el.title_en %></h3>
</div>
<div class="card-info">
  <p class="card-star">
    <% 5.times do |i| %>
      <span class="<%= i < el.review_star.to_i && 'is-active' %>">â˜…</span>
    <% end %>
  </p>
  <p class="card-when-where"><%= el.year %>/<%= el.country.label_en %></p>
</div>
<% if el.comment_en.present? %><p class="card-body"><%= el.comment_en %></p><% end %>
<% if el.author_en.present? || el.publisher.label_en.present? || el.quote_en.present? %>
  <details class="card-details">
    <summary class="toggle-more"><span class="toggle-more-close">Close</span><span class="toggle-more-open">Open</span></summary>
    <dl class="card-info-dl">
      <% if el.author_en.present? %>
        <dt class="card-info-dt">Author</dt>
        <dd class="card-info-dd"><%= el.author_en %></dd>
      <% end %>

      <% if el.publisher.present? %>
        <dt class="card-info-dt">Publisher</dt>
        <dd class="card-info-dd"><%= el.publisher.label_en %></dd>
      <% end %>

      <% if el.quote_en.present? %>
        <dt class="card-info-dt">Quote</dt>
        <dd class="card-info-dd"><%= el.quote_en %></dd>
      <% end %>
    </dl>
  </details>
<% end %>
