<%= render_tags(
  sort_options: [
    { name: "is_classic", value: "true", checked: params[:is_classic] == "true", label: "名作" },
    { name: "is_favorite", value: "true", checked: params[:is_favorite] == "true", label: "お気に入り" },
    *@tags.map { |tag| { name: tag_name, value: tag[2], checked: @selected_tags.include?(tag[2].to_s), label: tag[0] } }
  ],
) %>
