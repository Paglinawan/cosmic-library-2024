<section class="form max-w-157">
  <%= render partial: 'partials/form_head', locals: { heading: "新規登録" } %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-items">
      <div class="form-item">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
      </div>
      <div class="form-item">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上必要)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-input" %>
      </div>
      <div class="form-item">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input" %>
      </div>
    </div>
    <div class="mt-14">
      <%= f.submit "新規登録する", class: "form-btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>
