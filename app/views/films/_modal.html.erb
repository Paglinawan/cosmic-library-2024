<div class="modal is-display">
<div class="modal-wrapper">
  <%= link_to root_path, class: "modal-close" do %>
    <img src="<%= asset_path('icon-close.svg') %>" alt="Cosmic Library" width="24" height="24" alt="閉じる" />
  <% end %>
  <%= form_with model: film do |form| %>
    <div class="form">
      <ul class="form-items">
        <li class="form-item">
          <%= form.select :tag_ids, @tags, {}, { multiple: true, class: "form-select" } %>
        </li>
        <li class="form-item">
          <%= form.text_field :title, class: "form-input" %>
        </li>
        <li class="form-item">
          <%= form.text_field :title_en, class: "form-input" %>
        </li>
        <li class="form-item">
          <%= form.select :review_star, options_for_select([
            ['★★★★★', 5],
            ['★★★★☆', 4],
            ['★★★☆☆', 3],
            ['★★☆☆☆', 2],
            ['★☆☆☆☆', 1]
          ]), {}, class: "form-select" %>
        </li>
        <li class="form-item">
          <%= form.text_area :comment, class: "form-textarea" %>
        </li>
      </ul>
      <% if film.errors.any? %>
        <ul class="modal-messages">
          <% film.errors.full_messages.each do |message| %>
            <li class="modal-message"><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <div class="form-actions">
        <%= link_to "キャンセル", root_path, class: "form-cancel" %>
        <%= form.submit "保存", class: "form-submit" %>
      </div>
    </div>
  <% end %>
</div>
</div>