<main class="l-cards">
  <div class="modal is-display">
    <div class="modal-wrapper">
      <%= link_to root_path, class: "modal-close" do %>
        <img src="<%= asset_path('icon-close.svg') %>" alt="Cosmic Library" width="24" height="24" alt="閉じる" />
      <% end %>
      <%= form_with model: @film do |form| %>
        <div class="form">
          <ul class="form-items">
            <li class="form-item">
              <%= form.select :tags, options_for_select([
                ['アクション', 'アクション'],
                ['アドベンチャー', 'アドベンチャー'],
                ['コメディ', 'コメディ'],
                ['ドラマ', 'ドラマ'],
                ['ロマンス', 'ロマンス'],
                ['ホラー', 'ホラー'],
                ['サスペンス/スリラー', 'サスペンス/スリラー'],
                ['ファンタジー', 'ファンタジー'],
                ['SF（サイエンス・フィクション）', 'SF（サイエンス・フィクション）'],
                ['ミステリー', 'ミステリー'],
                ['ウエスタン', 'ウエスタン'],
                ['アニメーション', 'アニメーション'],
                ['ドキュメンタリー', 'ドキュメンタリー'],
                ['ミュージカル', 'ミュージカル'],
                ['戦争', '戦争'],
                ['歴史', '歴史'],
                ['スポーツ', 'スポーツ'],
                ['ノワール', 'ノワール'],
                ['フィルム・ノワール', 'フィルム・ノワール'],
                ['ノンフィクション', 'ノンフィクション'],
                ['バイオグラフィー', 'バイオグラフィー'],
                ['コメディ・ロマンス', 'コメディ・ロマンス'],
                ['アクション・アドベンチャー', 'アクション・アドベンチャー'],
                ['ファミリー', 'ファミリー'],
                ['ドラマ・コメディ', 'ドラマ・コメディ']
              ]), {}, class: "form-select" %>
            </li>
            <li class="form-item">
              <%= form.text_field :title, class: "form-input" %>
            </li>
            <li class="form-item">
              <%= form.text_field :title_en, class: "form-input" %>
            </li>
            <li class="form-item">
              <%= form.select :review_star, options_for_select([
                ['★★★★★', 5],
                ['★★★★☆', 4],
                ['★★★☆☆', 3],
                ['★★☆☆☆', 2],
                ['★☆☆☆☆', 1]
              ]), {}, class: "form-select" %>
            </li>
            <li class="form-item">
              <%= form.text_area :comment, class: "form-textarea" %>
            </li>
          </ul>
          <div class="form-actions">
            <%= link_to "キャンセル", root_path, class: "form-cancel" %>
            <%= form.submit "保存", class: "form-submit" %>
          </div>
        </div>
      <% end %>
      
    </div>
  </div>
</main>