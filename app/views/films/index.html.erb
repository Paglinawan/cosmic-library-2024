<%= render 'layouts/flash_messages' %>
<main class="cards">
  <% @films.each_with_index do |film, index| %>
    <%= render partial: 'card', locals: { class_name: "card#{index + 1}", id: film.id, title: film.title, title_en: film.title_en, card_star: film.review_star, card_body: film.comment, tags: film.film_tags, is_public: film.is_public  } %>
  <% end %>
</main>
<%== pagy_nav(@pagy) %>
<div class="page-count">
  <div class="page-count-bar"><span class="page-count-bar-active" style="width: <%= @page_count_active_width %>%;"></span></div>
  <p class="page-count-text">全<%= @page_count_total %>件</p>
</div>