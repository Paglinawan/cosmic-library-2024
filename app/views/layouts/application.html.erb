<!DOCTYPE html>
<html>
  <head>
    <title>Cosmic Library</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class='<%= @is_modal_open ? "is-modal-open" : "" %>'>
    <div class="l-main l-inner-md">

      <header class="hd">
        <img src="<%= asset_path('logo.svg') %>" alt="Cosmic Library" width="177" height="106" />
      </header>

      <nav class="pagenav">
        <ul class="pagenav-list">
          <li class="pagenav-item"><a href="#" class="pagenav-anc is-active">映画</a></li>
          <li class="pagenav-item"><a href="#" class="pagenav-anc">本</a></li>
        </ul>
      </nav>

      <% if @is_signed %>
        <div class="action">
          <span class="sp:hidden"><%= link_to "新規作成", new_film_path, class: "form-btn-add" %></span>
          <span class='<%= @is_modal_open ? "hidden" : "pc:hidden" %>'>
            <%= link_to new_film_path, class: "form-fixed-btn" do %>
              <%= image_tag asset_path('icon-plus.svg'), alt: "作成する", width: 24, height: 24 %>
            <% end %>
          </span>
        </div>
      <% end %>

      <%= yield %>

      <nav class="helpnav">
        <ul class="helpnav-list">
          <% if @is_signed %>
            <li class="helpnav-item"><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "helpnav-anc" %></li>
          <% else %>
            <li class="helpnav-item"><%= link_to "ログイン", new_user_session_path, class: "helpnav-anc" %></li>
          <% end %>
        </ul>
      </nav>

      <footer class="ft">
        <p class="ft-copyright">&copy; 2024 Paglinawan</p>
      </footer>

    </div>
  </body>
</html>
